<div class="row justify-content-center">
  <div class="col col-md-4">

    <h2><%= t('devise.sessions.header') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <p>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email' %>
        </p>

        <p>
          <%= f.label :password %>
          <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'Enter password' %>
        </p>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.label :remember_me, class: 'form-check-label' do %>
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= t('devise.sessions.remember') %>
          </div>
          <% end %>
        <% end %>

        <%= f.submit t('devise.sessions.sign_in'), class: 'btn btn-primary' %>

      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
