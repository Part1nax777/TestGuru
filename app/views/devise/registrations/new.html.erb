<div class="row justify-content-center">
  <div class="col col-md-4">

    <h2><%= t('devise.registrations.header')%></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Enter first name' %>
      </p>

      <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: 'Enter last name' %>
      </p>

      <p>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email' %>
      </p>

      <p>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('devise.registrations.characters_minimum') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: 'Enter password' %>
      </p>

      <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: 'Confirm password' %>
      </p>

      <div class="actions">
        <%= f.submit t('devise.registrations.sign_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
