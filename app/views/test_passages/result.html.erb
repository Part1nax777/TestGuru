<div class="row justify-content-center">
  <div class="col col-md-6">

    <h1 class="text-center"><%= t('.test', title: @test_passage.test.title) %></h1>

      <h5 class="text-center"><%= t('.result') %></h5>

      <% if @test_passage.successful_test? %>
        <p class="true">
          <%= t('.success') %>
          <%= @test_passage.result_percent %>
        </p>
      <% else %>
        <p class="false">
          <strong><%= t('.unsuccess') %></strong><br>
          <%= @test_passage.result_percent %>
        </p>
      <% end %>

      <p><%= link_to t('.to_tests'), root_path %></p>

  </div>
</div>
