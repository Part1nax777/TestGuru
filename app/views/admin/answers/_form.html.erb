<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <form>
    <div class="form-group">
      <p>
        <%= form.label :body %>
        <%= form.text_area :body, rows: 7, cols: 60, class: 'form-control' %>
      </p>

      <p>
        <%= form.label :correct %>
        <%= form.check_box :correct %>
      </p>

      <p><%= form.submit class: 'btn btn-primary' %></p>
    </div>
  </form>
<% end %>


