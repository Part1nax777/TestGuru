<h2 class="text-center"><%= question_header(@question) %></h2>

<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <form>
    <div class="form-group">
      <p>
        <%= form.label :body %>
        <%= form.text_field :body, id: :question_body, class: 'form-control' %>
      </p>

      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </form>
<% end %>


