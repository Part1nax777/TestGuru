<tr>
  <td class="text-center">
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="text-center"><%= t(".level.#{test_level(test)}") %></td>
  <td class="text-center"><%= test.questions.count %></td>
  <td class="text-center"><%= test.timer %></td>
  <td class="text-center"><%= link_to t('admin.actions.show'), admin_test_path(test) %></td>
  <td class="text-center">
    <%= link_to t('admin.actions.edit'),
    edit_admin_test_path(test),
    data: { test_id: test.id },
    class: 'form-inline-link' %>
  </td>
  <td class="text-center"><%= link_to t('admin.actions.delete'),
                  admin_test_path(test),
                  method: :delete,
                  data: { confirm: t('admin.confirm')} %>
  </td>
</tr>
