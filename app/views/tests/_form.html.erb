<%= form_with model: @test, local: true do |form| %>
  <%= render 'shared/errors', resourse: @test %>

    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :complexity %><br>
      <%= form.text_field :complexity %>
    </p>

    <p>
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :title,  promt: true %>
    </p>

    <p>
      <%= form.label :author %>
      <%= form.collection_select :author_id, User.all, :id, :name, promt: true %>
    </p>

    <p><%= form.submit %></p>
<% end %>
